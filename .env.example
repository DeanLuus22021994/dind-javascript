#!/usr/bin/env bash

# Server Configuration
export PORT=3000
export NODE_ENV=development

# Database Configuration
export DATABASE_URL=mongodb://localhost:27017/dind-javascript
export DATABASE_TEST_URL=mongodb://localhost:27017/dind-javascript-test

# Redis Configuration
export REDIS_URL=redis://localhost:6379
export REDIS_PASSWORD=

# Security
export JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
export JWT_EXPIRE=7d
export BCRYPT_ROUNDS=12
export SESSION_SECRET=your-session-secret-change-this

# Rate Limiting
export RATE_LIMIT_WINDOW_MS=900000
export RATE_LIMIT_MAX_REQUESTS=100

# Logging
export LOG_LEVEL=info
export LOG_FILE_MAX_SIZE=5242880
export LOG_MAX_FILES=5

# Monitoring
export ENABLE_METRICS=true
export METRICS_PORT=9090

# Feature Flags
export ENABLE_SWAGGER=true
export ENABLE_METRICS=true
export ENABLE_WEBSOCKET=true
export ENABLE_GRAPHQL=true

# CORS
export CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (for notifications)
export SMTP_HOST=smtp.gmail.com
export SMTP_PORT=587
export SMTP_USER=your-email@gmail.com
export SMTP_PASS=your-app-password
export SMTP_FROM=noreply@yourdomain.com

# File Upload
export MAX_FILE_SIZE=10485760
export UPLOAD_PATH=uploads/

# WebSocket
export ENABLE_WEBSOCKET=true
export WEBSOCKET_PORT=3001

# API Configuration
export API_VERSION=v1
export MAX_REQUEST_SIZE=10mb

# Background Jobs
export ENABLE_BACKGROUND_JOBS=true
export JOB_CONCURRENCY=5

# GraphQL
export ENABLE_GRAPHQL=true
export GRAPHQL_INTROSPECTION=true
export GRAPHQL_PLAYGROUND=true

# External Services
export EXTERNAL_API_KEY=your-external-api-key
export EXTERNAL_API_URL=https://api.example.com

# Development
export ENABLE_SWAGGER=true
export ENABLE_DEBUG=true
