# Micro Performance Optimization
DOCKER_STORAGE_DRIVER=overlay2
DOCKER_LOG_DRIVER=json-file
DOCKER_LOG_MAX_SIZE=5m
DOCKER_LOG_MAX_FILE=2
BUILDKIT_CACHE_MOUNT_TYPE=tmpfs
BUILDKIT_CACHE_SIZE=512M
BUILDKIT_WORKERS=1
BUILDKIT_GC_ENABLED=true
BUILDKIT_GC_KEEP_DURATION=12h
NODE_OPTIONS="--max-old-space-size=1024"
UV_THREADPOOL_SIZE=4
NODE_ENV=development
NPM_CONFIG_PROGRESS=false
YARN_CACHE_FOLDER=/cache/yarn
REDIS_MAXMEMORY=128mb
REDIS_MAXMEMORY_POLICY=allkeys-lru
POSTGRES_SHARED_BUFFERS=64MB
POSTGRES_EFFECTIVE_CACHE_SIZE=128MB
POSTGRES_WORK_MEM=2MB
POSTGRES_MAINTENANCE_WORK_MEM=32MB
POSTGRES_CHECKPOINT_COMPLETION_TARGET=0.7
POSTGRES_WAL_BUFFERS=8MB
CONTAINER_MEMORY_LIMIT=2g
CONTAINER_CPU_LIMIT=1
CONTAINER_SWAP_LIMIT=1g
DOCKER_NETWORK_MTU=1400
TMPFS_SIZE=512m
CACHE_DIR_PERMISSIONS=755
WORKSPACE_MOUNT_TYPE=cached
LOG_LEVEL=info
DEBUG_ENABLED=false
METRICS_ENABLED=false
HEALTH_CHECK_INTERVAL=60s
CACHE_STRATEGY=conservative
CACHE_TTL=1800
CACHE_MAX_SIZE=512m
PARALLEL_JOBS=1
MAX_CONCURRENT_BUILDS=1
MAX_CONCURRENT_TESTS=1
HOT_RELOAD_ENABLED=false
SOURCE_MAPS_ENABLED=false
MINIFICATION_ENABLED=false
COMPRESSION_ENABLED=false
