{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: test",
      "type": "shell",
      "command": "npm",
      "args": [
        "test"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "npm: test:watch",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "test:watch"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "jest",
        "pattern": [
          {
            "regexp": "^\\s*(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*Determining test suites to run\\.\\.\\.$",
          "endsPattern": "^\\s*Test Suites:\\s+\\d+\\s+(passed|failed)"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "npm: test:coverage",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "test:coverage"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Jest: Run Current File",
      "type": "shell",
      "command": "npm",
      "args": [
        "test",
        "--",
        "${relativeFile}"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "npm: start",
      "type": "shell",
      "command": "npm",
      "args": [
        "start"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "node",
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Server starting\\.\\.\\.$",
          "endsPattern": "^Server running on port \\d+$"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "npm: dev",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "node",
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting development server\\.\\.\\.$",
          "endsPattern": "^.*Server running on port \\d+.*$"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "ESLint: Fix All",
      "type": "shell",
      "command": "npx",
      "args": [
        "eslint",
        ".",
        "--fix"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Prettier: Format All",
      "type": "shell",
      "command": "npx",
      "args": [
        "prettier",
        "--write",
        "."
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "DevContainer: Start Services",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "up",
        "-d"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/.devcontainer"
      },
      "problemMatcher": []
    },
    {
      "label": "DevContainer: Stop Services",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "down"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/.devcontainer"
      },
      "problemMatcher": []
    },
    {
      "label": "DevContainer: View Status",
      "type": "shell",
      "command": "bash",
      "args": [
        "./dev-status.sh"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "DevContainer: Health Check",
      "type": "shell",
      "command": "bash",
      "args": [
        ".devcontainer/validate.sh"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Build with Cache",
      "type": "shell",
      "command": "docker",
      "args": [
        "buildx",
        "bake",
        "--load"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Push to Local Registry",
      "type": "shell",
      "command": "docker",
      "args": [
        "buildx",
        "bake",
        "--set",
        "*.output=type=registry,registry.insecure=true"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Database: Connect PostgreSQL",
      "type": "shell",
      "command": "psql",
      "args": [
        "-h",
        "localhost",
        "-U",
        "devuser",
        "-d",
        "devdb"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PGPASSWORD": "devpass"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Database: Connect Redis",
      "type": "shell",
      "command": "redis-cli",
      "args": [
        "-h",
        "localhost"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Logs: View All Services",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "logs",
        "-f"
      ],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}/.devcontainer"
      },
      "problemMatcher": []
    },
    {
      "label": "Logs: Application Logs",
      "type": "shell",
      "command": "tail",
      "args": [
        "-f",
        "logs/combined.log"
      ],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
